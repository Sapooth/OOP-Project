<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
		 version="3.1">
		 
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.employee.LoginServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>employeeinsert</servlet-name>
		<servlet-class>com.employee.EmployeeInsert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>employeeinsert</servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>updateemployee</servlet-name>
		<servlet-class>com.employee.UpdateEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateemployee</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>deleteemployee</servlet-name>
		<servlet-class>com.employee.DeleteEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteemployee</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
		 
</web-app>